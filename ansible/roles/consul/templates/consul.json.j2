{
  {% if consul_server == 'true' %}
    "server": true,
    "bootstrap_expect": {{consul_bootstrap_expect}},
  {% else %}
    "server": false,
  {% endif%}
  "data_dir": "{{ consul_data_dir }}",
  "retry_join": [{{consul_retry_join.strip()}}],
  "check_update_interval": "0s",
  "advertise_addr": "{{advertise_addr}}",
  "bind_addr": "0.0.0.0",
  "client_addr": "0.0.0.0",
  "ui": true,
  "encrypt": "{{consul_gossip_key}}",
  "verify_incoming": true,
  "verify_outgoing": true,
  "verify_server_hostname": false,
  "ca_file": "/etc/tarantool-cloud/tls/ca.pem",
  "cert_file": "/etc/tarantool-cloud/tls/server-cert.pem",
  "key_file": "/etc/tarantool-cloud/tls/server-key.pem",
  "acl_datacenter": "dc1",
  "acl_default_policy": "deny",
  "acl_down_policy": "deny",
  "acl_master_token": "{{consul_acl_master_token}}",
  "acl_token": "anonymous"
}
